     random =rand()% 6 + 1;
    
     
     fortunes2=fortunes(random);
     

     
} 
     
     int fortunes(int num1) {

		if(num1==1){
			cout<<" The more you give, the more you'll have. ";
	       	return(num1);
		}	
			
		else if(num1==2){
			cout<<" Hard work pays off. ";
					return(num1);
		}
			
        else if(num1==3){
			cout<<" Don't give up. ";
				return(num1);
        }
        
		else if(num1==4){
			cout<<" Stay focused. ";
				return(num1);
		}
		
		else if(num1==5){
			cout<<" Good times are coming your way.";
				return(num1);
		}
		else if(num1==6){
			cout<<" Stay patient and you will be rewarded. ";
				return(num1);
		}
			
			
	}
	
