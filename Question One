#include <iostream>

using namespace std;

int numbers(int num1,int num2,int num3);


int main()
{
   
   int n1,n2,n3;
   int numbers1;
   
   
   cout<<"Person one enter a number";
   cin>>n1;
   
   cout<<"Person two enter a number";
   
   cin>>n2;
   
   cout<<"Person three enter a number";
   cin>>n3;
   
   numbers1=numbers(n1,n2,n3);
   
   cout<<numbers1;
   
   
}


int numbers(int num1,int num2,int num3) {
    
       if((num1>num2) && (num1>num3)) {
       cout<<"The biggest number is ";
       return(num1);
   }
   
     else if((num2>num1) && (num2>num3)) {
       cout<<"The biggest number is ";
       return(num2);
   }
   
     else if((num3>num1) && (num3>num2)) {
       cout<<"The biggest number is ";
       return(num3);
   }
  
   

   
}
